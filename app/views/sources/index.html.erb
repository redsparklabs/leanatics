<h1>Listing sources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Author</th>
    <th>Active</th>
    <th>Last Updated</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%= source.name %></td>
    <td><%= source.url %></td>
    <td><%= source.author %></td>
    <td><%= source.active? ? 'Active' : 'Inactive' %></td>
    <td><%# if source.last_updated? %><%#= time_ago_in_words source.last_updated %><%# end %></td>
    <td><%= link_to 'Update', update_single_feed_path(source) %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

