<h1>Leanatics Admin</h1>
<%= link_to 'Update All Feeds',update_all_feed_path %><br />
<%= link_to 'View Feed',feed_path %><br />
<%= link_to 'New Source', new_source_path %><br />
<%= link_to 'Clear All Posts', clear_posts_cache_path %>

<table class="table table-striped">
  <tr>
    <th>Author</th>
    <th>Posts</th>
    <th>Url</th>
    <th>Active</th>
    <th>Last Updated</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%= source.author %></td>
    <td><%= source.post_count %></td>
    <td><%= source.url %></td>
    <td><%= source.active? ? 'Active' : 'Inactive' %></td>
    <td><% if source.update_feed?  %><%= source.last_updated?  ? time_ago_in_words(source.last_updated) : "Not Updated" %><% end %></td>
    <td><% if source.update_feed? %><%= link_to 'Update', update_single_feed_path(source) %><% end %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
